<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clauzon.clauzentregas">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/claudia"
        android:label="@string/app_name"
        android:roundIcon="@drawable/claudia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <service
            android:name="com.clauzon.clauzentregas.Servicios.FCM"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name="com.clauzon.clauzentregas.AvisoPrivacidadActivity" />
        <activity android:name="com.clauzon.clauzentregas.FinalizarPedido" />
        <activity android:name="com.clauzon.clauzentregas.UtilidadesActivity" />
        <activity android:name="com.clauzon.clauzentregas.ConfirmarRegistroActivity" />
        <activity android:name="com.clauzon.clauzentregas.LineasActivity" />
        <activity
            android:name="com.clauzon.clauzentregas.ActivacionActivity"
            android:theme="@style/Normal" />
        <activity
            android:name="com.clauzon.clauzentregas.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value=".LoginActivity" -->
            <!-- /> -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.clauzon.clauzentregas.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.clauzon.clauzentregas.RegistroActivity" />
        <activity android:name="com.clauzon.clauzentregas.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.clauzon.clauzentregas.RutasActivity"
            android:theme="@style/NoBar" />
        <activity android:name="com.clauzon.clauzentregas.VerRutaActivity"
            android:theme="@style/NoBar" />
    </application>

</manifest>